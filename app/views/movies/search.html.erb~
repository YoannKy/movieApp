<% end %>
<table>
<% @movie.each do |table| %>
<%@lien="/show/"
@lien+=table.id.to_s%>
<tr>
<td>
<%= if table.poster_path
	link_to image_tag("#{@configuration.base_url}w154#{table.poster_path}"), @lien 
    else
	link_to image_tag("http://www.atmos.washington.edu/~carey/images/notFound.png", :width =>154, :Height=>212), @lien 
	end%>
</td>
<td>
<%=table.title%>
</td></tr>
<%end%>
</table>

