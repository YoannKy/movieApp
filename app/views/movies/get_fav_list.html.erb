<%= if not @movies.any?   
		'Nothing to see here'
	end%>
<% @movies.each do |movie| %>
<%@lien="/show/"
@lien+=movie.id.to_s%>
<li>
<%= if movie.affiche
	link_to image_tag(movie.affiche), @lien 
    else
	link_to image_tag("http://www.atmos.washington.edu/~carey/images/notFound.png", :width =>154, :Height=>212), @lien 
	end%>
<%=movie.nom%>
 <% if not @seen.include? movie.id%> 
        <%=form_tag :controller => 'movies', :action => 'add_to_seen' do%>
            <%=hidden_field_tag :movid, movie.id%>
            <%=submit_tag "Add"%>
        <%end%>  
    <%else%>  
        <%='You have already seen this movie'%>
    <%end%>
</li>
  <%=form_tag :controller => 'movies', :action => 'remove_from_fav' do%>
            <%=hidden_field_tag :movid, movie.id%>
            <%=submit_tag "remove"%>
  <%end%>	
<%end%>
<%= link_to 'Back', :back %>