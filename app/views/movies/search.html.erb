<h1>Result</h1>
<table>
	<%if @movies == nil %>
		<%='No movies found'%>	
	<%elsif not @movies.any? %>  
		<%='No movies found'%>
	<%else%>
		<%@movies.each do |movie|%>
			<%@lien="/show/"
			@lien+=movie.id.to_s%>
			<tr>
				<td>
					<%= if movie.poster_path
						link_to image_tag("#{@configuration.base_url}w154#{movie.poster_path}"), @lien 
					    else
						link_to image_tag("http://www.atmos.washington.edu/~carey/images/notFound.png", :width =>154, :Height=>212), @lien 
						end%>
				</td>
				<td>		
					<%=movie.title%>
				</td>
				<td>
					<% if not @favorit.include? movie.id%> 
				        <%=form_tag :controller => 'movies', :action => 'add_to_fav' do%>
				            <%=hidden_field_tag :movid, movie.id%>
				            <%=submit_tag "Add"%>
				        <%end%> 
			    	<%else%>
			        	<%='This movie is already in your favorit list'%>
			    	<%end%>
				</td>
				<td>                
					<% if not @seen.include? movie.id%> 
		        		<%=form_tag :controller => 'movies', :action => 'add_to_seen' do%>
		            		<%=hidden_field_tag :movid, movie.id%>
		            	<%=submit_tag "Add"%>
		        		<%end%>  
				    <%else%>  
				        <%='You have already seen this movie'%>
				    <%end%>
				</td>
				<td>	
					<% if not @to_see.include? movie.id%> 
			            <%=form_tag :controller => 'movies', :action => 'add_to_see' do%>
		            		<%=hidden_field_tag :movid, movie.id%>
		            	<%=submit_tag "Add"%>
		        		<%end%>
			            else 
			                 'This movie is already in your to See list'
			        end%>
		        </td> 
		    </tr>
		<%end%>
	<%end%>
</table>
