<%if @movies == nil %>
    <%='No movies found'%>  
<%elsif not @movies.any? %>  
    <%='No movies found'%>
<%else%>
    <table>
    <% @movies.each do |movie| %>
        <tr>
        <%@lien="/show/"
        @lien+=movie.id.to_s%>
            <td>
            <%= if movie.affiche.to_s
            	link_to image_tag(movie.affiche.to_s), @lien 
                else
            	link_to image_tag("http://www.atmos.washington.edu/~carey/images/notFound.png", :width =>154, :Height=>212), @lien 
            	end%>
            </td>
            <td>
            <%=movie.nom%>
            </td>
            <td>
             <%= if not @favorit.include? movie.id 
                    link_to 'I love this movie!', add_to_fav_path(movie.id.to_i), :method => 'get'
                else 
                    'This movie is already in your favorit list'
                end%>
            </td>
            <td>    
                <%= if not @seen.include? movie.id 
                         link_to 'I\'ve already seen this movie !', add_to_seen_path(movie.id.to_i), :method => 'get'
                     else 
                        'You have already seen this movie'
                end%>
            </td>    
            <td>                	
                <%=link_to "I don\'t want to see this movie", delete_see_list_path(movie.id.to_i), :method => 'get'%>
            </td>
        </tr>
    <%end%>
    </table>
<%end%>
<%= link_to 'Back', :back %>